<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article.id), class: 'article-title', id: "article-#{article.id}" %> 
      <p style= "font-size: 12px">Created <%= distance_of_time_in_words(article.created_at, Time.now) %> ago</p>
    </li>
  <% end %>
</ul>
<br>
<%= link_to 'Create a New Article', new_article_path, class: 'new-article' %>